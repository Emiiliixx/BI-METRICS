    <script>
        const ctx = document.getElementById('myChart').getContext('2d');
        const myChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: [
                    'Región Metropolitana (68.4%)', 
                    'Región de O\'Higgins (10.5%)', 
                    'Región de Valparaíso (5.3%)', 
                    'Región del Maule (5.3%)', 
                    'Región de Ñuble (10.5%)'
                ],
                datasets: [{
                    data: [68.4, 10.5, 5.3, 5.3, 10.5],
                    backgroundColor: [
                        '#7fbf00', // Verde (Metropolitana)
                        '#40b3e6', // Celeste (O'Higgins)
                        '#2e75b6', // Azul claro (Valparaíso)
                        '#003366', // Azul oscuro (Maule)
                        '#f2f2f2'  // Gris/Blanco (Ñuble)
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'left', // Alinea las etiquetas a la izquierda como en la imagen
                        labels: {
                            boxWidth: 15,
                            font: { size: 12 }
                        }
                    }
                }
            }
        });
    </script>
